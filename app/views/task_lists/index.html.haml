%h1 my task lists

%div#task_lists
  %ul.task_lists
    - if (@tasks_lists.nil?)
      %li.task_list
        =link_to("No tasklists yet, why dont you create one?", new_task_list_path)
    - else
      - @task_lists.each do |task_list|
        %li.task_list
          =link_to task_list.name, task_list_tasks_path(task_list)
          =link_to 'Destroy list', task_list, :confirm => 'Are you sure?', :method => :delete, :class => "destroy_task_list"
          =link_to 'Rename list', edit_task_list_path(task_list), :class => "rename_task_list"
        
%div#task_list_actions
  = link_to 'Create new task list', new_task_list_path, :class => "task_list_action"
