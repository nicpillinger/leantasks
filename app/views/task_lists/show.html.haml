- content_for :head do
  %title lean task list
  =javascript_include_tag 'task_list/task_list.js'
- content_for :javascript do
  :javascript
    $(document).ready(function() {
      bindSortableItems("#{update_task_positions_task_list_path(@task_list)}");      
      bindAjaxEventsFor(".prioritisation_link");
    });
    
%h1 #{h @task_list.name}

=render :partial => 'task_list', :locals => { :task_list => @task_list }

%div#task_list_actions
  = link_to 'add a new task', new_task_list_task_path(@task_list), :class => "task_list_action"
  %p
    To re-prioritise tasks drag and drop them or use the up/down buttons to re-prioritise!