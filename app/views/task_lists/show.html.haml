%h1 #{h @task_list.name}

%p#notice= notice

%table
  - @task_list.tasks.each do |task|
    %tr
      %td= link_to '^', promote_task_list_task_path(@task_list, task)      
      %td= task.name
      %td= task.complexity
      %td= link_to 'mark as complete', mark_complete_task_list_task_path(@task_list, task)      
      %td= link_to 'edit task details', task_list_task_path(@task_list, task)      

%br

= link_to 'Add a new task', new_task_list_task_path(@task_list)
